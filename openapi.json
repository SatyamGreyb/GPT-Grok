{
  "openapi": "3.0.0",
  "info": {
    "title": "Grok Proxy Tool",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://gpt-grok--yourusername.repl.co"
    }
  ],
  "paths": {
    "/grok": {
      "post": {
        "summary": "Send prompt to Grok",
        "operationId": "callGrok",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "prompt": {
                    "type": "string"
                  }
                },
                "required": ["prompt"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Grok reply",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "reply": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}